{
  "compilerOptions": {
    "baseUrl": "./src",
    // "rootDirs": [
    //   "src/views",
    //   "generated/templates/views"
    // ],
    "paths": {
      // "*": [
      //   "app/*"
      // ],
      "models/*": [
        "hero/*.tsx"
      ],
      "data-access/*":["data-access/*"],
      "components/*": [
        "dashboard/components/*",
        "hero/components/*",
        "components/*",
        "message/components/*",
        "hero-search/components/*"
      ],
      "services/*": [
        "dashboard/services/*",
        "hero/services/*",
        "services/*",
        "message/services/*"
      ]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
